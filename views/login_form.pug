extends layout

block content
  h1 #{title}

  form(class='login-form', method='POST', action='/log-in')
    div.input-area
      input.form-input(type='text', name='username', placeholder="username", value=user.username)
      input.form-input(type='password', name='password', placeholder="password", value=user.password)
    button(class="submit-btn", type='submit') Log-in

  h4 don't have an account?
    | 
    a(href="/sign-up") Sign-up

  if errors
   ul
    for error in errors
     li!= error.msg